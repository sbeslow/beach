# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                    controllers.Application.index()
GET        /beach/:urlCode                      controllers.Beaches.show(urlCode: String)
GET        /scrapeBeaches                       controllers.Application.scrapeCpdAllBeaches()

GET        /api/advisories/:beachUrlCode        controllers.Apis.advisories(beachUrlCode : String)
GET			/api/scoreboard						controllers.Apis.scoreboard()
GET			/scoreboard/beaches					controllers.Beaches.listScoreboardBeaches()

GET        /test                                controllers.Application.test()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                        controllers.Assets.at(path="/public", file)
